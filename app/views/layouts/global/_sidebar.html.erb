<div class="no-print">
  <div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar sidebar-head">
      <li>
        <a href="/courses/new" class="sidebar_text">Classes<span class="glyphicon glyphicon-plus pull-right sidebar_text"></span></a>
      </li>
    </ul>
    <ul class="nav nav-sidebar">
      <% @current_user.courses.each do |course| %>
        <li class="nav text-primary <%= 'active' if current_page?(course_path(course.id)) %>">
          <%= link_to course.name, course_path(course.id), :class => 'sidebar_course_name sidebar_text' %>
          <ul class="nav nav-sidebar assessments">
            <% course.assignments.each do |assignment| %>
              <li class="<%= 'active' if current_page?(course_quiz_take_path(course.id, assignment.quiz.id, :preview => 1)) %>">
                <%= link_to assignment.title, course_quiz_take_path(course.id, assignment.quiz.id, :preview => 1), :class => 'sidebar_text' %>
              </li>
            <% end -%>
          </ul>
        </li>
      <% end -%>
    </ul>
  </div>
</div>
