<% jammit_css :rosters -%>

<h2>View Class <a href="<%= rosters_path %>"><%= t(:view_class_rosters, "Rosters") %></a>&nbsp|&nbsp<a href="<%= reports_path() %>"><%= t(:view_class_reports, "Reports") %></a> </h2>
<div class="rs-margin-lr">
	<% if @is_teacher || @is_admin -%>
		<% @school_rosters.each do |roster| -%>
			<div class="school_roster">
				<b><a href="<%= account_path(roster.account) %>"><%= roster.name %></a></b> <a href="<%= roster_path(roster) %>" class="button"> Rosters </a>
			</div>
		<% end -%>
	<% end -%>
</div>