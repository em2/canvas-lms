      <tbody>
        <tr class="rShim">
          <td class="rShim" style="width:0;"></td>
          <td class="rShim" style="width:120px;"></td>
          <td class="rShim" style="width:120px;"></td>
          <td class="rShim" style="width:120px;"></td>
          <td class="rShim" style="width:120px;"></td>
          <td class="rShim" style="width:120px;"></td>
          <td class="rShim" style="width:120px;"></td>
          <td class="rShim" style="width:120px;"></td>
          <td class="rShim" style="width:120px;"></td>
        </tr>
        <tr dir="ltr">
          <td class="hd"><p style="height:16px;">.</p></td>
          <td colspan="3" dir="ltr" class="s40">Response Key</td>
          <td style="display:none;"></td>
          <td style="display:none;"></td>
