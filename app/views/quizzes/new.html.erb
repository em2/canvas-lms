<form class="form-horizontal">
  <fieldset>

    <!-- Form Name -->

    <!-- Text input-->
    <div class="row">
      <div class="control-group">
      <h2 class="sub-header">Add Assessment</h2>
        <label class="control-label" for="textinput">Assessment Name</label>
        <div class="controls">
          <input id="textinput" name="textinput" type="text" placeholder="" class="input-xlarge">
        </div>
      </div>
    </div>

    <!-- Textarea -->
    <div class="row">
      <div class="control-group">
        <label class="control-label" for="textarea">Assessment Description</label>
        <div class="controls">
          <textarea id="textarea" rows="6" name="textarea" class="col-md-3"></textarea>
        </div>
      </div>
    </div>

    <!-- File Button -->
    <div class="row">
      <div class="control-group">
        <label class="control-label" for="filebutton">Upload Assessment</label>
        <div class="controls">
          <input id="filebutton" name="filebutton" class="input-file" type="file">
        </div>
      </div>
    </div>

    <!-- Button -->
    <div class="row">
      <div class="control-group">
        <label class="control-label" for="singlebutton"></label>
        <div class="controls">
          <button id="singlebutton" name="singlebutton" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>

  </fieldset>
</form>
