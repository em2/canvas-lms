<% jammit_css :reports_index -%>

<% content_for :page_title do -%>Assessment Reports (District)<% end -%>

<h1>Assessment Reports (District)</h1>

<span class='assessment_reports'>
  <ol>
    <% @schools.each do |school, probes| -%>
      <li><span class="report_group_label"><%= school.parent_account.name ? school.parent_account.name + school.name : school.name %></span> <span class="title">(School)</span></li>
      <ol class="report_group">
        <% probes.each do |probe| -%>
          <li>
            <%= link_to probe.title, school_report_assessment_report_path(school.id, probe.id) %> <span class="title">(Assessment)</span>
          </li>
        <% end -%>
      </ol>
    <% end -%>
  </ol>
</span>

<%= render :partial => 'reports/update_reports', :object => @report %>
